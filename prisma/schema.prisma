// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String               @id @default(cuid())
  email               String               @unique
  name                String
  password            String
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  oneTimeBills        OneTimeBill[]
  paycheckSavings     PaycheckSavings[]
  billPayments        BillPayment[]
  incomeSources       IncomeSource[]
  bills               Bill[]
  incomeSettings      IncomeSettings?
  billPaycheckAmounts BillPaycheckAmount[]
}

model IncomeSource {
  id            String   @id @default(cuid())
  userId        String
  name          String
  amount        Float
  frequency     String   // "weekly", "biweekly", "twicemonthly", "monthly"
  lastPayDate   String
  firstPayDay   Int?     // For twice monthly - first pay day of month
  secondPayDay  Int?     // For twice monthly - second pay day of month
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model IncomeSettings {
  id           String   @id @default(cuid())
  userId       String   @unique
  miscPercent  Float    @default(30)  // Savings percentage
  monthsToShow Int      @default(1)   // Months to project
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Bill {
  id               String   @id @default(cuid())
  userId           String
  name             String
  paymentAmount    Float
  apr              Float    @default(0)
  remainingBalance Float    @default(0)
  dueDate          String
  billType         String   @default("recurring")  // "recurring", "one-time", "other"
  allowableLateDay Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model OneTimeBill {
  id           String   @id @default(cuid())
  userId       String
  name         String
  amount       Float
  paycheckDate String   // The paycheck date this bill is assigned to (YYYY-MM-DD)
  dueDate      String?  // Optional due date for the bill
  isPaid       Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([paycheckDate])
}

model PaycheckSavings {
  id           String   @id @default(cuid())
  userId       String
  paycheckDate String   // The paycheck date (YYYY-MM-DD)
  amount       Float    // Custom savings amount for this specific paycheck
  isDeposited  Boolean  @default(false) // Whether savings have been deposited
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, paycheckDate])
  @@index([userId])
}

model BillPayment {
  id           String   @id @default(cuid())
  userId       String
  paycheckDate String   // The paycheck date this payment is for (YYYY-MM-DD)
  billName     String   // Name of the bill
  billDueDate  String   // Due date of the bill instance (YYYY-MM-DD)
  isPaid       Boolean  @default(true)
  paidAt       DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, paycheckDate, billName, billDueDate])
  @@index([userId])
  @@index([paycheckDate])
}

model BillPaycheckAmount {
  id           String   @id @default(cuid())
  userId       String
  billName     String   // Name of the bill (to match with bill instances)
  billDueDate  String   // Due date of the specific bill instance (YYYY-MM-DD)
  paycheckDate String   // The paycheck date this override is for (YYYY-MM-DD)
  amount       Float    // Custom amount for this specific paycheck
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, billName, billDueDate, paycheckDate])
  @@index([userId])
  @@index([paycheckDate])
}
